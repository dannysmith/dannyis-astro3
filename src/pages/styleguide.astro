    </main>
    <Footer />
    <style>
      :root {
        --background-color: var(--c-beige-bg);
      }
      body {
        background: var(--background-color);
        display: grid;
        grid-template-rows: auto min-content;
      }

      main {
        padding: 1em;
        width: 100%;
        max-width: 80ch;
        margin: 0 auto;
      }

      h1 {
        text-transform: uppercase;
        font-size: 4rem;
        text-align: center;
        margin-bottom: 3rem;
      }

      main > * {
        margin-top: 3rem;
      }

      .test-section {
        margin: 2rem 0;
        padding: 1rem;
        border: 1px dashed #ccc;
        border-radius: 8px;
      }

      .test-section h2 {
        margin-top: 0;
        font-size: 1.5rem;
        color: #333;
        border-bottom: 2px solid #eee;
        padding-bottom: 0.5rem;
      }

      .test-section h3 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.2rem;
        color: #666;
      }
    </style>
  </body>
</html>
