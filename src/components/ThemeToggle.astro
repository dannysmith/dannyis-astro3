// No props needed
---

<button id="theme-toggle" aria-label="Toggle dark mode" type="button">
  <span id="theme-toggle-icon" aria-hidden="true">üåô</span>
</button>

<script is:inline>
  (function () {
    const html = document.documentElement;
    const storageKey = 'theme';
    const darkQuery = window.matchMedia('(prefers-color-scheme: dark)');
    function setTheme(theme) {
      html.setAttribute('data-theme', theme);
      document.getElementById('theme-toggle-icon').textContent = theme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
    }
    // Init: set theme from storage or system
    let theme = localStorage.getItem(storageKey);
    if (!theme) theme = darkQuery.matches ? 'dark' : 'light';
    setTheme(theme);
    // Listen for toggle
    document.getElementById('theme-toggle').onclick = function () {
      const current = html.getAttribute('data-theme');
      const next = current === 'dark' ? 'light' : 'dark';
      setTheme(next);
      localStorage.setItem(storageKey, next);
    };
  })();
</script>

<style>
  button#theme-toggle {
    background: none;
    border: 1px solid var(--color-border);
    border-radius: 0.7em;
    cursor: pointer;
    width: 2em;
    height: 2em;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1em;
    color: var(--color-text-primary);
    transition:
      color 0.2s,
      border-color 0.2s,
      background 0.2s,
      box-shadow 0.2s;
    box-sizing: border-box;
    margin: 0;
    box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.06);
  }
  button#theme-toggle:focus,
  button#theme-toggle:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--color-accent);
    outline: none;
    box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.1);
  }
  button#theme-toggle:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
  #theme-toggle-icon {
    pointer-events: none;
    font-size: 1.2em;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
